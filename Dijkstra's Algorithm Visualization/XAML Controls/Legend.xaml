        <Ellipse Width="15" Height="15" Canvas.Top="72" Canvas.Left="6" Stroke="Aqua" StrokeThickness="2"/>
        <TextBlock Canvas.Top="71" Canvas.Left="28">
                                <Run Text="Вершина минимальна"/><LineBreak/><Run Text="(на этом шаге)"/></TextBlock>

        <Path Fill="OrangeRed" Canvas.Left="202" Canvas.Top="13.5" Height="9.5" Stretch="Fill">
            <Path.Data>
                <PathGeometry Figures=" M 0 10 L 10 20 L 10 12 L 40 12 L 40 8 L 10 8 L 10 0 L 0 10 Z" />
            </Path.Data>
        </Path>
        <Path Fill="LightGray" Canvas.Left="202" Canvas.Top="36.084" Height="9.166" Stretch="Fill">
            <Path.Data>
                <PathGeometry Figures=" M 0 10 L 10 20 L 10 12 L 40 12 L 40 8 L 10 8 L 10 0 L 0 10 Z" />
            </Path.Data>
        </Path>
        <TextBlock Canvas.Top="10" Canvas.Left="255"><Run Text="Ребро релаксировано"/></TextBlock>
        <TextBlock Canvas.Top="31" Canvas.Left="255">
        <Run Text="Ребро ожидает релаксации или "/> <LineBreak/> <Run Text="Ребро не релаксировано"/></TextBlock>
    </Canvas>

</ResourceDictionary>